@page "/"
@rendermode InteractiveServer
@using GroceryStore.Ui.Components.Shared
@using GroceryStore.Ui.Components.Shared.BannerSlider
@using GroceryStore.Ui.Services
@inject IToastService ToastService
@inject ILoadingService LoadingService
<div @onclick="OnDocumentClick" style="min-height:100vh;">

    <!-- Search Overlay -->
    <div class="search-overlay" id="searchOverlay">
        <div class="search-container">
            <button class="search-close" id="searchClose">
                <i class="fas fa-times"></i>
            </button>
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="globalSearch" placeholder="ابحث عن المنتجات، الأقسام، الماركات...">
            </div>
            <div class="search-results" id="searchResults"></div>
        </div>
    </div>

    <!-- Main Content -->
    <main id="app">
        <BannerSection></BannerSection>
        <HeroSection></HeroSection>
        <FeaturedCategoriesSection></FeaturedCategoriesSection>
        <FeaturedProductsSection></FeaturedProductsSection>
        <!-- Pages will be rendered here dynamically -->
    </main>

    <!-- Loading Spinner -->
    <LoadingSpinner></LoadingSpinner>

</div>

<!-- Toast Notification -->
<Toast></Toast>

@code {
    private async Task OnDocumentClick()
    {
        await ToastService.SuccessAsync("تم النقر على الصفحة الرئيسية!");
    }
}

